
<%= simple_form_for(@artist) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :photo %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :nationality %>
    <%= f.input :birth_year %>
    <%= f.input :death_year %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
